<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.Big_Event.mapper.ArticleMapper">
    <!--动态sql-->
    <select id="list" resultType="org.Big_Event.pojo.Article">
        select * from article
        <where>
            <if test="categoryId != null">
                category_id = #{categoryId}
            </if>

            <if test="state != null">
                and state = #{state}
            </if>

            and create_user = #{userId}
        </where>


    </select>
</mapper>